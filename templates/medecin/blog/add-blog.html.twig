{% extends 'basedashboard.html.twig' %}
{% block title %}
	Nouveau article
{% endblock %}
{% block content %}
	<div class="col-lg-8 col-md-16">
		<div class="onboarding-content-box">
			<div class="onboarding-title profile-title">
				<h2>Ajouter Un Article</h2>
			</div>

			<div class="onboarding-content passcode-wrap mail-box">
				<div class="row">
					<div class="col-lg-12">
						<div class="form-group">
							{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
							<div class="settings-form">



  <div class="form-group">
    {{ form_label(form.nom, "nom ")  }}
    {{ form_widget(form.nom,({'class':'form-control'})) }}
    {% if form_errors(form.nom) is not empty %}
    <div class="alert alert-danger"
    {{ form_errors(form.nom) }}
    </div>
    {% endif %}
    </div>



  <div class="form-group">
    {{ form_label(form.description, "Description ")  }}
    {{ form_widget(form.description,({'class':'form-control'})) }}
    {% if form_errors(form.description) is not empty %}
    <div class="alert alert-danger"
    {{ form_errors(form.description) }}
    </div>
    {% endif %}
    </div>



                    





							

					<div class="change-photo-btn  bg-grey">
									<div>
										<i class="feather-upload"></i>
									</div>
									{{ form_widget(form.images, {attr:{'class':'form-control change-photo-btn  bg-grey'}}) }}
								</div>


								<div class="col-12">
									<div class="doctor-submit text-end">
										<div class="text-right">
											{{ form_row(form.Enregistrer , {attr:{'class':'btn btn-primary save-btn'}}) }}


										</div>
									</div>
								</div>
							</div>


							{{ form_end(form) }}

			
				</div>
			{% endblock %}
