{% extends 'home.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}
	<div class="content">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-12">
					<div class="row blog-grid-row">
						{% for article in articles %}
							<div class="col-md-6 col-sm-12">

								<div class="blog grid-blog">
									<div class="blog-image">

										<a href="{{ path('app_blog_details',{id: article.id})}}">
											<img Dr. </a> <center> {% for image in article.images|slice(0, 1) %} <img src="{{ asset('/uploads/'~image.name) }}" alt="" width="251,45" height="314" /> {% endfor %} </a> </div> <div class="blog-content"> <ul class="entry-meta meta-item"> <li> <div class="post-author"> <a href="doctor-profile.html"> <span> dr. {{article.medecin }} </span>></li>
											<li>
												<i class="far fa-clock"></i>
												{{article.date|date ('d/m/y') }}</li>
										</ul>
										<h3 class="blog-title">
											<a href="{{ path('app_blog_details',{id: article.id})}}">
												{{article.nom }}</a>
										</h3>
										<p class="mb-0">{{article.description|slice(0,100) }}</p>
									</div>
								</div>

							</div>
						{% endfor %}
					</div>

					<div class="row">
						<div class="col-md-12">
							<div class="blog-pagination">
								<nav>
									<ul class="pagination justify-content-center">
										<li class="page-item disabled">
											<a class="page-link" href="#" tabindex="-1">
												<i class="fas fa-angle-double-left"></i>
											</a>
										</li>
										<li class="page-item">
											<a class="page-link" href="#">1</a>
										</li>
										<li class="page-item active">
											<a class="page-link" href="#">2
												<span class="visually-hidden">(current)</span>
											</a>
										</li>
										<li class="page-item">
											<a class="page-link" href="#">3</a>
										</li>
										<li class="page-item">
											<a class="page-link" href="#">
												<i class="fas fa-angle-double-right"></i>
											</a>
										</li>
									</ul>
								</nav>
							</div>
						</div>
					</div>

				</div>


				<div class="col-lg-4 col-md-12 sidebar-right theiaStickySidebar">
					<div class="card search-widget">
						<div class="card-body">
							<form class="search-form">
								<div class="input-group">
									<input type="text" placeholder="recherche..." class="form-control">
									<button type="submit" class="btn btn-primary">
										<i class="fa fa-search"></i>
									</button>
								</div>
							</form>
						</div>
					</div>
					<div class="card post-widget">
						<div class="card-header">

							<h4 class="card-title">Derniers Articles</h4>
						</div>
						<div class="card-body">
							{% for article in articles|slice(0,2) %}

								<ul class="latest-posts">
									<span>
										<li>
											<div class="post-thumb">


												<a href="{{ path('app_blog_details',{id: article.id}) }}">

													{% for image in article.images|slice(0, 1) %}
														<img src="{{ asset('/uploads/'~image.name) }}" alt="" width="80" height="53,3333"/>
													{% endfor %}
												</a>
												<br>

											</div>


											<h4>
												&nbsp;
												<a href="blog-details.html">{{article.nom }}</a>
											</h4>
											<p>&nbsp;{{article.date|date('d/m/y') }}</p>

										</li>


									</span>

								</ul>


							{% endfor %}
						</div>


						<div class="card category-widget">
							<div class="card-header">
								<h4 class="card-title">Cat√©gories des articles</h4>
							</div>
							{%for specialite in specialities %}
								<div class="card-body">
									<ul class="categories">
										{{specialite.nom}}
									</ul>
								</div>
							{% endfor %}
						</div>
					</div>


				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block footer %}
	{{ parent() }}
{% endblock %}

