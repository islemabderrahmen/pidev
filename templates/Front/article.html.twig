						</div>


					</div>
				</div>
			</div>
		</div>
	{% endblock %}

{% block script %}
{{ parent() }}

<script>

$(document).on('click', ".add-to-favorites", function (e) {
    e.preventDefault();

    var url = $(this).attr('data-href');
    var entityId = $(this).attr('data-entity-id');

    $(this).hide();
    $(this).nextAll('.remove-from-favorites').show();

    $('#add-to-favorites-' + entityId).hide();
    $('#remove-from-favorites-' + entityId).show();
    $.ajax({
        type: 'POST',
        dataType: 'json',
        url: url,
        success: function () {
            console.log('Success');
        },
        error: function () {
            alert('erreur');
            $('#remove-from-favorites-' + entityId).hide();
            $('#add-to-favorites-' + entityId).show();
        }
    });
});

$(document).on('click', ".remove-from-favorites", function (e) {
    e.preventDefault();
    var url = $(this).attr('data-href');
    var entityId = $(this).attr('data-entity-id');

    $(this).hide();
    $(this).prev('.add-to-favorites').show();
    $('#remove-from-favorites-' + entityId).hide();
    $('#add-to-favorites-' + entityId).show();
    $.ajax({
        type: 'POST',
        dataType: 'json',
        url: url,
        success: function () {
            console.log('Success');
        },
        error: function () {
            alert('erreur');
            $('#add-to-favorites-' + entityId).show();
            $('#remove-from-favorites-' + entityId).hide();
        }
    });
});


</script>

{% endblock %}